<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorF0F0F0"
    android:orientation="vertical">

    <include layout="@layout/view_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_12"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_fitness"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/corners_5_solid_white"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/dp_8">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_134"
                android:src="@drawable/icon_entertainment_fitness" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="科学健身"
                android:textColor="@color/color333333"
                android:textSize="@dimen/font_21"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_education"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/corners_5_solid_white"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/dp_8">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_134"
                android:src="@drawable/icon_entertainment_education" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="教育课程"
                android:textColor="@color/color333333"
                android:textSize="@dimen/font_21"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_12"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_medical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/corners_5_solid_white"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/dp_8">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_134"
                android:src="@drawable/icon_entertainment_medical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="医疗课程"
                android:textColor="@color/color333333"
                android:textSize="@dimen/font_21"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_science"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/corners_5_solid_white"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/dp_8">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_134"
                android:src="@drawable/icon_entertainment_science" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="科普课程"
                android:textColor="@color/color333333"
                android:textSize="@dimen/font_21"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>