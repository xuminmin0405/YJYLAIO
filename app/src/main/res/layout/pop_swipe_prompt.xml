<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_22"
    android:layout_marginEnd="@dimen/dp_22"
    android:background="@drawable/corners_10_solid_white"
    android:paddingBottom="@dimen/dp_22">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/dp_37"
        android:layout_height="@dimen/dp_37"
        android:padding="@dimen/dp_10"
        android:src="@drawable/icon_close_dialog"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13"
        android:text="请在设备上刷卡"
        android:textColor="@color/color333333"
        android:textSize="@dimen/font_23"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_citizen_card_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_19"
        android:text="市民卡"
        android:textColor="@color/color007AFF"
        android:textSize="@dimen/font_19"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/iv_citizen_card"
        app:layout_constraintRight_toRightOf="@id/iv_citizen_card"
        app:layout_constraintTop_toBottomOf="@id/tv_hint" />

    <TextView
        android:id="@+id/tv_id_card_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="身份证"
        android:textColor="@color/color007AFF"
        android:textSize="@dimen/font_19"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/iv_id_card"
        app:layout_constraintRight_toRightOf="@id/iv_id_card"
        app:layout_constraintTop_toTopOf="@id/tv_citizen_card_hint" />

    <ImageView
        android:id="@+id/iv_citizen_card"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_173"
        android:layout_marginStart="@dimen/dp_19"
        android:layout_marginTop="@dimen/dp_6"
        android:src="@drawable/icon_swipe_prompt_one"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_id_card"
        app:layout_constraintTop_toBottomOf="@id/tv_citizen_card_hint" />

    <ImageView
        android:id="@+id/iv_id_card"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_173"
        android:layout_marginStart="@dimen/dp_19"
        android:layout_marginEnd="@dimen/dp_19"
        android:src="@drawable/icon_swipe_prompt_two"
        app:layout_constraintLeft_toRightOf="@id/iv_citizen_card"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_citizen_card" />
</androidx.constraintlayout.widget.ConstraintLayout>